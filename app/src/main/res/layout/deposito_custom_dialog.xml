<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_image_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bod_semitransparent_alert"
            android:gravity="center">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corners_shape"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <!--
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/alert"
                        android:layout_gravity="center_vertical"/>
                        -->

                    <com.neopixl.pixlui.components.textview.TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="¡Muy bien!\nEstamos listos para proceder"
                        android:textSize="22dp"
                        pixlui:clearclipboardcontent="true"
                        pixlui:copyandpaste="false"
                        pixlui:typeface="OpenSans-Semibold.ttf" />

                </LinearLayout>

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_textoSuperior"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:lines="2"
                    android:text=" Te invitamos a confirmar tu operación:"
                    android:textSize="11dp"
                    pixlui:clearclipboardcontent="true"
                    pixlui:copyandpaste="false"
                    pixlui:typeface="OpenSans-Semibold.ttf" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp">

                    <com.neopixl.pixlui.components.textview.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Cantidad de Cheques a depositar: "
                        android:textSize="12dp"
                        pixlui:clearclipboardcontent="true"
                        pixlui:copyandpaste="false"
                        pixlui:typeface="OpenSans-Bold.ttf" />

                    <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/tv_CantidadCheques"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="20"
                        android:textSize="12dp"
                        pixlui:clearclipboardcontent="true"
                        pixlui:copyandpaste="false"
                        pixlui:typeface="OpenSans-Semibold.ttf" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/tv_tituloProductoOrigen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Nombre del Cliente:"
                        android:textSize="12dp"
                        pixlui:clearclipboardcontent="true"
                        pixlui:copyandpaste="false"
                        pixlui:typeface="OpenSans-Bold.ttf" />


                    <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/tv_cuenta_destino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:gravity="left"
                        android:text="Luis Fernando Santos"
                        android:textSize="12dp"
                        pixlui:clearclipboardcontent="true"
                        pixlui:copyandpaste="false"
                        pixlui:typeface="OpenSans-Semibold.ttf" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">


                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <com.neopixl.pixlui.components.textview.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Monto Total:"
                        android:textSize="12dp"
                        pixlui:clearclipboardcontent="true"
                        pixlui:copyandpaste="false"
                        pixlui:typeface="OpenSans-Bold.ttf" />

                    <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/tv_monto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:gravity="left"
                        android:text="Bs. 10.000,00"
                        android:textSize="12dp"
                        pixlui:clearclipboardcontent="true"
                        pixlui:copyandpaste="false"
                        pixlui:typeface="OpenSans-Semibold.ttf" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="35dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|bottom">

                        <ImageView
                            android:id="@+id/iv_back"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/cerrar_app" />

                        <com.neopixl.pixlui.components.textview.TextView
                            android:id="@+id/tv_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:clickable="true"
                            android:text="Rechazar"
                            android:textSize="22sp"
                            pixlui:clearclipboardcontent="true"
                            pixlui:copyandpaste="false"
                            pixlui:typeface="OpenSans-Semibold.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|bottom">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/continuar_fondoblanco" />

                        <com.neopixl.pixlui.components.textview.TextView
                            android:id="@+id/tv_next_transfer_dialog"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:clickable="true"
                            android:text="Depositar"
                            android:textSize="22sp"
                            pixlui:clearclipboardcontent="true"
                            pixlui:copyandpaste="false"
                            pixlui:typeface="OpenSans-Semibold.ttf" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>